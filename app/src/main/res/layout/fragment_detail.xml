<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".view.ListFragment">

        <ImageView
            android:id="@+id/dog_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:minHeight="200dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_icon" />

        <TextView
            android:id="@+id/dog_name"
            style="@style/tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dog_image"
            android:layout_alignParentLeft="true"
            android:layout_margin="12dp"
            android:text="Dog Name" />

        <TextView
            android:id="@+id/dog_purpose"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dog_name"
            android:layout_margin="12dp"
            android:text="Dog Purpose" />

        <TextView
            android:id="@+id/dog_tempraments"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dog_purpose"
            android:layout_margin="12dp"
            android:text="Dog Temprament" />

        <TextView
            android:id="@+id/dog_lifespan"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dog_image"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:text="Dog LifeSpan" />
    </RelativeLayout>

</layout>